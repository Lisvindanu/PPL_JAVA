package view;

import model.Playlist;
import controller.PlaylistController;
import util.InputUtil;
import util.ValidationUtil;
import javax.swing.*;
import javax.swing.table.DefaultTableModel;
import java.awt.*;
import java.util.ArrayList;
import java.util.List;

public class PlaylistPanel extends JPanel {
    private JTextField txtPlaylistName, txtOwner;
    private JComboBox<String> cmbVisibility;
    private JList<String> filmList;
    private DefaultListModel<String> filmListModel;
    private JTable table;
    private DefaultTableModel tableModel;
    private PlaylistController playlistController;

    public PlaylistPanel(PlaylistController controller) {
        this.playlistController = controller;
        setLayout(new BorderLayout(10, 10));
        setBorder(BorderFactory.createEmptyBorder(10, 10, 10, 10));

        add(createFormPanel(), BorderLayout.NORTH);
        add(createTablePanel(), BorderLayout.CENTER);
    }

    private JPanel createFormPanel() {
        JPanel panel = new JPanel(new GridBagLayout());
        panel.setBorder(BorderFactory.createTitledBorder("Playlist Management"));
        GridBagConstraints gbc = new GridBagConstraints();
        gbc.insets = new Insets(5, 5, 5, 5);
        gbc.fill = GridBagConstraints.HORIZONTAL;

        // Playlist Name
        gbc.gridx = 0; gbc.gridy = 0;
        panel.add(new JLabel("Playlist Name:"), gbc);
        gbc.gridx = 1; gbc.weightx = 1;
        txtPlaylistName = new JTextField(20);
        panel.add(txtPlaylistName, gbc);

        // Owner
        gbc.gridx = 0; gbc.gridy = 1; gbc.weightx = 0;
        panel.add(new JLabel("Owner:"), gbc);
        gbc.gridx = 1; gbc.weightx = 1;
        txtOwner = new JTextField(20);
        panel.add(txtOwner, gbc);

        // Visibility (JComboBox)
        gbc.gridx = 0; gbc.gridy = 2; gbc.weightx = 0;
        panel.add(new JLabel("Visibility:"), gbc);
        gbc.gridx = 1; gbc.weightx = 1;
        String[] visibilityOptions = {"Public", "Private", "Friends Only"};
        cmbVisibility = new JComboBox<>(visibilityOptions);
        panel.add(cmbVisibility, gbc);

        // Film Selection (JList)
        gbc.gridx = 0; gbc.gridy = 3; gbc.weightx = 0;
        panel.add(new JLabel("Select Films:"), gbc);
        gbc.gridx = 1; gbc.weightx = 1; gbc.fill = GridBagConstraints.BOTH;

        filmListModel = new DefaultListModel<>();
        // Sample films
        String[] sampleFilms = {
            "The Shawshank Redemption",
            "The Godfather",
            "The Dark Knight",
            "Pulp Fiction",
            "Forrest Gump",
            "Inception",
            "The Matrix",
            "Interstellar",
            "Fight Club",
            "Parasite"
        };
        for (String film : sampleFilms) {
            filmListModel.addElement(film);
        }

        filmList = new JList<>(filmListModel);
        filmList.setSelectionMode(ListSelectionModel.MULTIPLE_INTERVAL_SELECTION);
        filmList.setVisibleRowCount(6);
        JScrollPane filmScrollPane = new JScrollPane(filmList);
        panel.add(filmScrollPane, gbc);

        // Buttons
        gbc.gridx = 0; gbc.gridy = 4; gbc.gridwidth = 2; gbc.fill = GridBagConstraints.HORIZONTAL;
        JPanel btnPanel = new JPanel(new FlowLayout(FlowLayout.CENTER));
        JButton btnAdd = new JButton("Create Playlist");
        JButton btnClear = new JButton("Clear");
        JButton btnDelete = new JButton("Delete Selected");

        btnAdd.addActionListener(e -> addPlaylist());
        btnClear.addActionListener(e -> clearForm());
        btnDelete.addActionListener(e -> deletePlaylist());

        btnPanel.add(btnAdd);
        btnPanel.add(btnClear);
        btnPanel.add(btnDelete);
        panel.add(btnPanel, gbc);

        return panel;
    }

    private JPanel createTablePanel() {
        JPanel panel = new JPanel(new BorderLayout());
        panel.setBorder(BorderFactory.createTitledBorder("Playlist List"));

        String[] columns = {"Playlist Name", "Owner", "Visibility", "Film Count", "Films"};
        tableModel = new DefaultTableModel(columns, 0) {
            @Override
            public boolean isCellEditable(int row, int column) {
                return false;
            }
        };

        table = new JTable(tableModel);
        table.setSelectionMode(ListSelectionModel.SINGLE_SELECTION);
        table.getColumnModel().getColumn(4).setPreferredWidth(300);
        JScrollPane scrollPane = new JScrollPane(table);
        panel.add(scrollPane, BorderLayout.CENTER);

        return panel;
    }

    private void addPlaylist() {
        try {
            String playlistName = InputUtil.getTextField(txtPlaylistName, "Playlist Name");
            String owner = InputUtil.getTextField(txtOwner, "Owner");
            String visibility = (String) cmbVisibility.getSelectedItem();
            List<String> selectedFilms = filmList.getSelectedValuesList();

            if (selectedFilms.isEmpty()) {
                ValidationUtil.showError(this, "Please select at least one film!");
                return;
            }

            Playlist playlist = new Playlist(playlistName, owner, visibility, selectedFilms);
            playlistController.addPlaylist(playlist);
            tableModel.addRow(playlist.toTableRow());
            clearForm();
            ValidationUtil.showSuccess(this, "Playlist created successfully!");
        } catch (Exception ex) {
            ValidationUtil.showError(this, ex.getMessage());
        }
    }

    private void clearForm() {
        InputUtil.clearTextField(txtPlaylistName, txtOwner);
        cmbVisibility.setSelectedIndex(0);
        filmList.clearSelection();
    }

    private void deletePlaylist() {
        int selectedRow = table.getSelectedRow();
        if (selectedRow >= 0) {
            if (ValidationUtil.confirmAction(this, "Are you sure you want to delete this playlist?")) {
                playlistController.deletePlaylist(selectedRow);
                tableModel.removeRow(selectedRow);
                ValidationUtil.showSuccess(this, "Playlist deleted successfully!");
            }
        } else {
            ValidationUtil.showError(this, "Please select a playlist to delete!");
        }
    }
}
